generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x", "darwin-arm64"]
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_DATABASE_URL")
}

model ClientType {
  key     String   @id
  name    String
  icon    String
  color   String
  clients Client[]
  
  @@map("client_type")
}

model Client {
  id         String   @id @default(uuid())
  name       String
  legalName  String
  taxId      String
  address    String
  city       String
  latitude   Float
  longitude  Float
  notes      String? @db.MediumText
  typeKey String
  type   ClientType @relation(fields: [typeKey], references: [key])
  licenses License[]
  devices Device[] 
  createdAt  DateTime @default(now())
  @@map("client")
}

model License {
  id             String       @id
  clientId       String
  typeKey        String
  parentId       String?
  client         Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  type           LicenseType  @relation(fields: [typeKey], references: [key])
  parent         License?     @relation("SubLicenses", fields: [parentId], references: [id])
  subLicenses    License[]    @relation("SubLicenses")
  @@map("license")
}

model LicenseType {
  key      String @unique
  name     String
  licenses License[]
  @@map("license_type")
}


model DeviceType {
  key     String   @id
  name    String              
  icon    String
  devices Device[]
  @@map("device_type")
}

model Device {
  id            String      @id @default(cuid()) // ID autogenerado
  name          String
  serialNumber  String?
  ip            String?
  anyDesk       String?
  typeKey       String
  type          DeviceType  @relation(fields: [typeKey], references: [key])
  clientId      String
  client        Client      @relation(fields: [clientId], references: [id], onDelete: Cascade)
  @@map("device")
}
